@page "/ManageListing/AllLikes"
@inject AuthenticationStateProvider authenticationState

<style>
    .example {
        text-align: center;
        background: rgba(0, 0, 0, 0.05);
        border-radius: 4px;
        margin-bottom: 20px;
        padding: 30px 50px;
        margin: 20px 0;
    }
</style>

<AuthorizeView>
    <Authorized>
        <main>
            <div class="container my-5">
                <div class="row">
                    <div class="col-md-12">
                        <div class="profile-sidebar-content">
                            <h4>Like</h4>
                            <p class="add-lidting-title-from">
                                My Activity / Likes
                                <span>
                                    <a class="back_btn mx-3" href="/MyAccount/MyActivity">Back</a>
                                </span>
                            </p>
                            <div class="list_general like-listing">
                                <ul>
                                    @if (likeListingVMs != null)
                                    {
                                        foreach (var likeListingVM in likeListingVMs)
                                        {
                                            <li><ListingActivity listingActivityVM="likeListingVM" /></li>
                                        }
                                    }
                                    else
                                    {
                                        <div class="example">
                                            <Spin />
                                        </div>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </Authorized>
    <NotAuthorized>
        <UnAuthorizedUser />
    </NotAuthorized>
</AuthorizeView>

