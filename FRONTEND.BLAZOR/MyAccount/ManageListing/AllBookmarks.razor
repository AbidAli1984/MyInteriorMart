@page "/ManageListing/AllBookmarks"

<style>
    .example {
        text-align: center;
        background: rgba(0, 0, 0, 0.05);
        border-radius: 4px;
        margin-bottom: 20px;
        padding: 30px 50px;
        margin: 20px 0;
    }
</style>

<AuthorizeView>
    <Authorized>
        <main>
            <div class="container margin_60_35">
                <div class="row">
                    <div class="col-lg-3">
                        <SideNavigation isVendor="@isVendor" currentPage="@BOL.Constants.Bookmark" />
                    </div>

                    <div class="col-lg-9">
                        <div class="tab-content profile-sidebar-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                                <div class="add-review">
                                    <h5>Bookmarks</h5>
                                    <div class="list_general like-listing">
                                        <ul>
                                            @if (BookmarkListingVMs != null)
                                            {
                                                foreach (var bookmarkListingVM in BookmarkListingVMs)
                                                {
                                                    <li><ListingActivity listingActivityVM="bookmarkListingVM" /></li>
                                                }
                                            }
                                            else
                                            {
                                                <div class="example">
                                                    <Spin />
                                                </div>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </Authorized>
    <NotAuthorized>
        <UnAuthorizedUser />
    </NotAuthorized>
</AuthorizeView>