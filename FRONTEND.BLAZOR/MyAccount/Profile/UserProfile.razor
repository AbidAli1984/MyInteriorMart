@page "/MyAccount/UserProfile"

@inject NotificationService _notice

<AuthorizeView>
    <Authorized>
        <main>
            <div class="container margin_60_35">
                <div class="row">
                    <div class="col-lg-3">
                        <SideNavigation isVendor="@UserProfileVM.isVendor" />
                    </div>

                    <div class="col-lg-9">
                        <div class="tab-content profile-sidebar-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                                <div class="add-review icon-form-group">
                                    <p style="font-size:24px;">Edit Profile</p>
                                    <div class="row">
                                        <UserProfileForm UserProfileVM="UserProfileVM" UploadProfileImageEvent="UploadProfileImage" />
                                        <div class="text-center col-12 mt-3">
                                            @if (userProfile == null)
                                            {
                                                <button type="submit" class="btn btn-primary w-100" @onclick="@(async() => await CreateProfileAsync())">Submit</button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-primary w-100" @onclick="@(async() => await UpdateProfileAsync())">Update & Save</button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </Authorized>
    <NotAuthorized>
        <UnAuthorizedUser />
    </NotAuthorized>
</AuthorizeView>