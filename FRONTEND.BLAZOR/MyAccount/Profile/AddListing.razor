@page "/MyAccount/ManageListing"
@using BOL;

<AuthorizeView>
    <Authorized>
        <main>
            <div class="container margin_60_35">
                <div class="row">
                    <div class="col-lg-3">
                        <SideNavigation isVendor="@isVendor" currentPage="@BOL.Constants.ManageListing" />
                    </div>

                    <div class="col-lg-9">
                        <div class="tab-content profile-sidebar-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                                <div class="add-review">
                                    <h5>Manage Listing</h5>
                                    <div class="row">
                                        <div class="col-md-4 col-6 mb-3">
                                            <a href="/MyAccount/Listing/Company">
                                                <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                    <img src="/resources/img/AddListing/office.png" class="listing_img" alt="Company">
                                                    <div class="add_listing_card_title">Company Details</div>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="col-md-4 col-6 mb-3">
                                            @if (stepsCompleted >= Constants.CompanyComplete)
                                            {
                                                <a href="MyAccount/Listing/Communication">
                                                    <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                        <img src="/resources/img/AddListing/communication.png" class="listing_img" alt="Communication">
                                                        <div class="add_listing_card_title">Communication</div>
                                                    </div>
                                                </a>
                                            }
                                            else
                                            {
                                                <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                    <img src="/resources/img/AddListing/communication.png" class="listing_img" alt="Communication">
                                                    <div class="add_listing_card_title">Communication</div>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-4 col-6 mb-3">
                                            @if (stepsCompleted >= Constants.CommunicationComplete)
                                            {
                                                <a href="MyAccount/Listing/Address">
                                                    <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                        <img src="/resources/img/AddListing/address.png" class="listing_img" alt="Addresses">
                                                        <div class="add_listing_card_title">Addresses</div>
                                                    </div>
                                                </a>
                                            }
                                            else
                                            {
                                                <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                    <img src="/resources/img/AddListing/address.png" class="listing_img" alt="Addresses">
                                                    <div class="add_listing_card_title">Addresses</div>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-4 col-6 mb-3">
                                            @if (stepsCompleted >= Constants.AddressComplete)
                                            {
                                                <a href="MyAccount/Listing/Category">
                                                    <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                        <img src="/resources/img/AddListing/category.png" class="listing_img" alt="Categories">
                                                        <div class="add_listing_card_title">Categories</div>
                                                    </div>
                                                </a>
                                            }
                                            else
                                            {
                                                <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                    <img src="/resources/img/AddListing/category.png" class="listing_img" alt="Categories">
                                                    <div class="add_listing_card_title">Categories</div>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-4 col-6 mb-3">
                                            @if (stepsCompleted >= Constants.CategoryComplete)
                                            {
                                                <a href="MyAccount/Listing/Specialisation">
                                                    <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                        <img src="/resources/img/AddListing/specialities.png" class="listing_img" alt="Specialisations">
                                                        <div class="add_listing_card_title">Specialisations</div>
                                                    </div>
                                                </a>
                                            }
                                            else
                                            {
                                                <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                    <img src="/resources/img/AddListing/specialities.png" class="listing_img" alt="Specialisations">
                                                    <div class="add_listing_card_title">Specialisations</div>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-4 col-6 mb-3">
                                            @if (stepsCompleted >= Constants.SpecialisationComplete)
                                            {
                                                <a href="MyAccount/Listing/WorkingHours">
                                                    <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                        <img src="/resources/img/AddListing/workin-hour.png" class="listing_img" alt="Working Hours">
                                                        <div class="add_listing_card_title">Working Hours</div>
                                                    </div>
                                                </a>
                                            }
                                            else
                                            {
                                                <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                    <img src="/resources/img/AddListing/workin-hour.png" class="listing_img" alt="Working Hours">
                                                    <div class="add_listing_card_title">Working Hours</div>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-4 col-6 mb-3">
                                            @if (stepsCompleted >= Constants.WorkingHourComplete)
                                            {
                                                <a href="MyAccount/Listing/PaymentMode">
                                                    <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                        <img src="/resources/img/AddListing/payment.png" class="listing_img" alt="Payment Modes">
                                                        <div class="add_listing_card_title">Payment Modes</div>
                                                    </div>
                                                </a>
                                            }
                                            else
                                            {
                                                <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                    <img src="/resources/img/AddListing/payment.png" class="listing_img" alt="Payment Modes">
                                                    <div class="add_listing_card_title">Payment Modes</div>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-4 col-6 mb-3">
                                            <a href="MyAccount/Listing/Images">
                                                <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                    <img src="/resources/img/AddListing/payment.png" class="listing_img" alt="Upload Images">
                                                    <div class="add_listing_card_title">Upload Images</div>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="col-md-4 col-6 mb-3">
                                            <a href="MyAccount/Listing/SocialLinks">
                                                <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                    <img src="/resources/img/AddListing/payment.png" class="listing_img" alt="Add Social Links">
                                                    <div class="add_listing_card_title">Add Social Links</div>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="col-md-4 col-6 mb-3">
                                            <a href="MyAccount/Listing/Keywords">
                                                <div class="add_listing_card d-flex align-items-center justify-content-start">
                                                    <img src="/resources/img/AddListing/payment.png" class="listing_img" alt="SEO Keywords">
                                                    <div class="add_listing_card_title">SEO Keywords</div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </Authorized>
    <NotAuthorized>
        <UnAuthorizedUser />
    </NotAuthorized>
</AuthorizeView>