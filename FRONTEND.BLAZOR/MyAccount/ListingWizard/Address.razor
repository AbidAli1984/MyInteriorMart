@page "/MyAccount/Listing/Address/{listingId:int?}"
@inject ListingDbContext listingContext
@inject AuditDbContext auditContext
@inject SharedDbContext sharedContext
@inject CategoriesDbContext categoriesContext
@inject AuthenticationStateProvider authenticationState
@inject NotificationService _notice
@inject NavigationManager navManager
@inject IJSRuntime jsRuntime
@using AntDesign
@using BOL.SHARED

<AuthorizeView>
    <Authorized>
        <div class="container my-5">
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-sidebar-content">
                        <h4>Add Addresses Details</h4>
                        <p class="add-lidting-title-from">
                            Add Listing / Add Addresses Details
                            <span>
                                <a class="back_btn mx-3" href="/MyAccount/AddListing">Back</a>
                            </span>
                        </p>
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label>Country <span class="text-danger">*</span></label>
                                <select class="form-control" @onchange="ListStateAsync">
                                    @if (listCountry != null)
                                    {
                                        <option disabled selected>Choose...</option>
                                        foreach (var i in listCountry)
                                        {
                                            <option value="@i.CountryID">@i.Name</option>
                                        }
                                    }
                                    else
                                    {
                                        <option selected disabled>Loading...</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>State <span class="text-danger">*</span></label>
                                <select class="form-control" @onchange="ListCityAsync">
                                    @if (listState != null)
                                    {
                                        <option disabled selected>Choose...</option>
                                        foreach (var i in listState)
                                        {
                                            <option value="@i.StateID">@i.Name</option>
                                        }
                                    }
                                    else
                                    {
                                        <option selected disabled>Loading...</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>City <span class="text-danger">*</span></label>
                                <select class="form-control" @onchange="ListAreaAsync">
                                    @if (listCity != null)
                                    {
                                        <option disabled selected>Choose...</option>
                                        foreach (var i in listCity)
                                        {
                                            <option value="@i.CityID">@i.Name</option>
                                        }
                                    }
                                    else
                                    {
                                        <option selected disabled>Loading...</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Locality <span class="text-danger">*</span></label>
                                <select class="form-control" @onchange="ListPincodeAsync">
                                    @if (listArea != null)
                                    {
                                        <option disabled selected>Choose...</option>
                                        foreach (var i in listArea)
                                        {
                                            <option value="@i.StationID">@i.Name</option>
                                        }
                                    }
                                    else
                                    {
                                        <option selected disabled>Loading...</option>
                                    }
                                </select>
                                <button class="btn btn-sm btn-link" @onclick="@(async() => await ToggleShowAreaModal())">+ Add locality</button>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Pincode <span class="text-danger">*</span></label>
                                <select class="form-control" @onchange="ListLocalityAsync">
                                    @if (listPincode != null)
                                    {
                                        <option disabled selected>Choose...</option>
                                        foreach (var i in listPincode)
                                        {
                                            <option value="@i.PincodeID">@i.PincodeNumber</option>
                                        }
                                    }
                                    else
                                    {
                                        <option selected disabled>Loading...</option>
                                    }
                                </select>
                                <button class="btn btn-sm btn-link" @onclick="@(async() => await ToggleShowPincodeModal())">+ Add pincode</button>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Area <span class="text-danger">*</span></label>
                                <select class="form-control" @onchange="GetLocalityIdAsync">
                                    @if (listLocality != null)
                                    {
                                        <option disabled selected>Choose...</option>
                                        foreach (var i in listLocality)
                                        {
                                            <option value="@i.LocalityID">@i.LocalityName</option>
                                        }
                                    }
                                    else
                                    {
                                        <option selected disabled>Loading...</option>
                                    }
                                </select>
                                <button class="btn btn-sm btn-link" @onclick="@(async() => await ToggleShowLocalityModal())">+ Add area</button>
                            </div>
                            <div class="form-group col-md-12">
                                <label>Address <span class="text-danger">*</span></label>
                                <textarea @bind="address" class="form-control" rows="4"></textarea>
                            </div>
                            <div class="text-left col-12 mt-3">
                                @if (buttonBusy == false)
                                {
                                    <button class="btn btn-primary" @onclick="@(async() => await CreateAddressAsync())">Save & Continue</button>
                                }
                                else
                                {
                                    <button class="btn btn-secondary">Saving...</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Begin: Station Popup -->
        <Modal Title="Add Area"
               OnCancel="@(async() => await ToggleShowAreaModal())"
               Centered="true"
               Visible="@showAreaModal"
               Footer="null">
            <input type="text" placeholder="Area" @bind="AreaName" class="form-control" />
            <br />
            <buttton class="btn btn-success btn-sm" @onclick="@(async() => await CreateAreaAsync())">Create</buttton>
            <buttton class="btn btn-danger btn-sm ml-2" @onclick="@(async() => await ToggleShowAreaModal())">Cancel</buttton>
        </Modal>
        <!-- Begin: Station Popup -->
        <!-- Begin: Pincode Pincode -->
        <Modal Title="Add Pincode"
               OnCancel="@(async() => await ToggleShowPincodeModal())"
               Centered="true"
               Visible="@showPincodeModal"
               Footer="null">
            <input type="number" placeholder="Pincode" @bind="PincodeNumber" class="form-control" />
            <br />
            <buttton class="btn btn-success btn-sm" @onclick="@(async() => await CreatePincodeAsync())">Create</buttton>
            <buttton class="btn btn-danger btn-sm ml-2" @onclick="@(async() => await ToggleShowPincodeModal())">Cancel</buttton>
        </Modal>
        <!-- Begin: Pincode Popup -->
        <!-- Begin: Locality Pincode -->
        <Modal Title="Add Locality"
               OnCancel="@(async() => await ToggleShowLocalityModal())"
               Centered="true"
               Visible="@showLocalityModal"
               Footer="null">
            <input type="text" placeholder="Locality" @bind="LocalityName" class="form-control" />
            <br />
            <buttton class="btn btn-success btn-sm" @onclick="@(async() => await CreateLocalityAsync())">Create</buttton>
            <buttton class="btn btn-danger btn-sm ml-2" @onclick="@(async() => await ToggleShowLocalityModal())">Cancel</buttton>
        </Modal>
        <!-- Begin: Locality Popup -->
    </Authorized>
    <NotAuthorized>
        <UnAuthorizedUser />
    </NotAuthorized>
</AuthorizeView>