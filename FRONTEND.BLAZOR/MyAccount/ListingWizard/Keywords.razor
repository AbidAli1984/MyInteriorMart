@page "/MyAccount/Listing/Keywords"


<AuthorizeView>
    <Authorized>
        <div class="container my-5">
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-sidebar-content">
                        <h4>Keywords</h4>
                        <p class="add-lidting-title-from">
                            Add Listing / Keywords
                            <span>
                                <a class="back_btn mx-3" href="/MyAccount/ManageListing">Back</a>
                            </span>
                        </p>
                        <div class="row">
                            <KeywordsDropdown SelectedListing="SelectedListing" CreateKeywordClick="AddKeyword" />
                            <div class="form-group col-md-12 keyword">
                                <label for="name">Selected Keywords </label><br />
                                @if (ListKeyword != null)
                                {
                                    @foreach (var keyword in ListKeyword)
                                    {
                                        <span class="keywordcontainer">
                                            @keyword.SeoKeyword
                                            <button @onclick="@(() => RemoveFromListKeyword(@keyword.SeoKeyword))"><i class="fa fa-times" aria-hidden="true"></i></button>
                                        </span>
                                    }
                                }
                                @if (InsertKeyword != null)
                                {
                                    @foreach (var keyword in InsertKeyword)
                                    {
                                        <span class="keywordcontainer">
                                            @keyword.SeoKeyword
                                            <button @onclick="@(() => RemoveFromInsertKeyword(@keyword.SeoKeyword))"><i class="fa fa-times" aria-hidden="true"></i></button>
                                        </span>
                                    }
                                }
                            </div>
                            <div class="text-left col-12 mt-3">
                                @if (buttonBusy == false)
                                {
                                    <button @onclick="@(async() => await AddOrUpdateKeyword())" class="btn btn-primary">Save & Continue</button>
                                }
                                else
                                {
                                    <button class="btn btn-secondary">Saving...</button>
                                }
                                <a href="/MyAccount/Listing/SocialLinks" class="pull-right mr-2"><img src="/img/arrow-previous.png" height="25" /></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <UnAuthorizedUser />
    </NotAuthorized>
</AuthorizeView>