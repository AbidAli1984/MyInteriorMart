@page "/MyAccount/Listing/SocialLinks"
<AuthorizeView>
    <Authorized>
        <div class="container my-5">
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-sidebar-content">
                        <h4>Social Links</h4>
                        <p class="add-lidting-title-from">
                            Add Listing / Social Links
                            <span>
                                <a class="back_btn mx-3" href="/MyAccount/ManageListing">Back</a>
                            </span>
                        </p>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="name">Facebook </label>
                                <Input Placeholder="Enter Facebook Link" @bind-Value="@SocialNetwork.Facebook" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name">Whatsapp </label>
                                <Input Placeholder="Enter Whatsapp Group Link" @bind-Value="@SocialNetwork.WhatsappGroupLink" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name">LinkedIn </label>
                                <Input Placeholder="Enter LinkedIn Link" @bind-Value="@SocialNetwork.Linkedin" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name">Twitter </label>
                                <Input Placeholder="Enter Twitter Link" @bind-Value="@SocialNetwork.Twitter" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name">Youtube </label>
                                <Input Placeholder="Enter Youtube Link" @bind-Value="@SocialNetwork.Youtube" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name">Instagram </label>
                                <Input Placeholder="Enter Instagram Link" @bind-Value="@SocialNetwork.Instagram" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name">Pinterest </label>
                                <Input Placeholder="Enter Pinterest Link" @bind-Value="@SocialNetwork.Pinterest" />
                            </div>
                            <div class="text-left col-12 mt-3">
                                @if (buttonBusy == false)
                                {
                                    <button @onclick="@(async() => await AddOrUpdateSocialNetwork())" class="btn btn-primary">Save & Continue</button>
                                }
                                else
                                {
                                    <button class="btn btn-secondary">Saving...</button>
                                }
                                @if (IsSocialNetworkExist)
                                {
                                    <a href="/MyAccount/Listing/Keywords" class="pull-right mr-2"><img src="/img/arrow-next.png" height="25" /></a>
                                }
                                <a href="/MyAccount/Listing/Images" class="pull-right mr-2"><img src="/img/arrow-previous.png" height="25" /></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <UnAuthorizedUser />
    </NotAuthorized>
</AuthorizeView>