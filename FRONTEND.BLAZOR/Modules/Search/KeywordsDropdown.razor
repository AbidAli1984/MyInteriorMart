<div class="form-group col-md-6">
    <label for="name">Keywords </label>
    <div style="display:flex">
        <BlazoredTypeahead SearchMethod="SearchListings" @bind-Value="SelectedKeyword" Placeholder="Select Keywords">
            <SelectedTemplate>@context.value</SelectedTemplate>
            <ResultTemplate>
                @context.label
            </ResultTemplate>
            @*<NotFoundTemplate>
                @Keywords not found.
            </NotFoundTemplate>*@
        </BlazoredTypeahead>
        <button style="margin-left:10px" @onclick="CreateKeyword" Label="Create?"><i style="font-size:30px" class="fa fa-plus-square" aria-hidden="true"></i></button>
    </div>
</div>
<div class="form-group col-md-6">
    @*<button class="btn btn-primary" @onclick="@(() => AddKeyword())">+ Add</button>*@
</div>
@if (SelectedKeyword != null && !string.IsNullOrWhiteSpace(SelectedKeyword.label))
{
    CreateKeyword();
}