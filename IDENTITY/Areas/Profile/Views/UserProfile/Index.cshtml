                                    <input type="hidden" name="ProfileId" value="@Model.ProfileID" required />
                                    <input type="file" name="file" class="form-control" required />
                                    <br />
                                    <input type="submit" value="Upload Image" class="btn btn-primary btn-block btn-sm" />
                                </form>
