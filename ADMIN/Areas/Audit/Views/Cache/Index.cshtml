@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<!-- Begin: Breadcrumb -->
@{
    ViewData["BC-1"] = "Cache Server";
    ViewData["BC-2"] = "Manage";
    ViewData["BC-3"] = ViewData["Title"];
    ViewData["BT-Text-1"] = "Manage";
    ViewData["BT-Link-1"] = "/Audit/Cache";
    ViewData["BT-Text-2"] = "Dashboard";
    ViewData["BT-Link-2"] = "/";
    ViewData["BT-Text3"] = "";
    ViewData["BT-Link3"] = "";
    ViewData["BT-Text4"] = "";
    ViewData["BT-Link4"] = "";
}
<!-- End: -->

<h5>@ViewData["Title"]</h5>
<hr />


<div class="table-responsive country-table">
    <table class="table table-striped table-bordered mb-0 text-sm-nowrap text-lg-nowrap text-xl-nowrap">
        <thead>
            <tr>
                <th class="wd-lg-25p">Purpose</th>
                <th class="wd-lg-25p">Location</th>
                <th class="wd-lg-25p">Key</th>
                <th class="wd-lg-25p">Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>List Countries</td>
                <td class="tx-medium tx-inverse"><a href="~/Common/Countries" target="_blank">Common > Countries</a></td>
                <td class="tx-medium tx-inverse">[Countries]</td>
                <td class="tx-medium tx-danger">
                    <form method="get" asp-action="RemoveCache">
                        <input type="hidden" name="cacheName" value="Show All Countries" />
                        <input type="hidden" name="cacheKey" value="Countries" />
                        <button type="submit" class="btn btn-sm btn-danger">Clear Cache</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>List States</td>
                <td class="tx-medium tx-inverse"><a href="~/Common/States" target="_blank">Common > States</a></td>
                <td class="tx-medium tx-inverse">[States]</td>
                <td class="tx-medium tx-danger">
                    <form method="get" asp-action="RemoveCache">
                        <input type="hidden" name="cacheName" value="Show All States" />
                        <input type="hidden" name="cacheKey" value="States" />
                        <button type="submit" class="btn btn-sm btn-danger">Clear Cache</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>List Cities</td>
                <td class="tx-medium tx-inverse"><a href="~/Common/Cities" target="_blank">Common > Cities</a></td>
                <td class="tx-medium tx-inverse">[Cities]</td>
                <td class="tx-medium tx-danger">
                    <form method="get" asp-action="RemoveCache">
                        <input type="hidden" name="cacheName" value="List Cities" />
                        <input type="hidden" name="cacheKey" value="Cities" />
                        <button type="submit" class="btn btn-sm btn-danger">Clear Cache</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>User History</td>
                <td class="tx-medium tx-inverse"><a href="~/Audit/UserHistories" target="_blank">Audit > User Histories</a></td>
                <td class="tx-medium tx-inverse">[UserHistory]</td>
                <td class="tx-medium tx-danger">
                    <form method="get" asp-action="RemoveCache">
                        <input type="hidden" name="cacheName" value="User History" />
                        <input type="hidden" name="cacheKey" value="UserHistory" />
                        <button type="submit" class="btn btn-sm btn-danger">Clear Cache</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>Listing Last Updated</td>
                <td class="tx-medium tx-inverse"><a href="~/Audit/UserHistories" target="_blank">Audit > Listing Last Updated</a></td>
                <td class="tx-medium tx-inverse">[ListingLastUpdated]</td>
                <td class="tx-medium tx-danger">
                    <form method="get" asp-action="RemoveCache">
                        <input type="hidden" name="cacheName" value="Listing Last Updated" />
                        <input type="hidden" name="cacheKey" value="ListingLastUpdated" />
                        <button type="submit" class="btn btn-sm btn-danger">Clear Cache</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Begin: Model poup cache removed successfully -->
<div class="modal" id="cacheRemoved">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content tx-size-sm">
            <div class="modal-body tx-center pd-y-20 pd-x-20">
                <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button> <i class="icon ion-ios-checkmark-circle-outline tx-100 tx-success lh-1 mg-t-20 d-inline-block"></i>
                <h4 class="tx-success tx-semibold mg-b-20">Success!</h4>
                <h6 class="mg-b-20 mg-x-20">@ViewBag.CacheRemove</h6>
                <div class="modal-footer justify-content-center">
                    <button class="btn ripple btn-success" data-dismiss="modal" type="button">Continue</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End: -->


@section Scripts{
    <script src="~/backend/assets/js/modal.js"></script>
    @if (ViewBag.CacheRemove != null)
    {
        <script type="text/javascript">
            $(window).on('load', function () {
                $('#cacheRemoved').modal('show');
            });
        </script>
    }
}
<!-- End: -->
