@model BOL.CATEGORIES.FifthCategory

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    ViewData["RefererUrl"] = Context.Request.Headers["Referer"].ToString();
}

@{
    ViewData["BT-Text1"] = "";
    ViewData["BT-Link1"] = "";
    ViewData["BT-Text2"] = "";
    ViewData["BT-Link2"] = "";
    ViewData["BT-Text3"] = "";
    ViewData["BT-Link3"] = "";
    ViewData["BT-Text4"] = "";
    ViewData["BT-Link4"] = "";
}

@section Scripts{
    <script type="text/javascript">
        // Shafi: Bind keyword field with url field and convert to upper case by remove space
        $(document).ready(function () {
            // Bind keyword, url and description input together
            $("#businessCategoryName").keyup(function (event) {

                // Force text to be typed in lowercase in Keyword text field
                $(this).val($(this).val().toLowerCase());

                // Get value of keyword text field
                var businessCategoryName = $(this).val();

                // Tranform value of keyword to Title Case
                function ToTitleCase(businessCategoryName) {
                    return businessCategoryName.replace(/(?:^|\s)\w/g, function (match) {
                        return match.toUpperCase();
                    });
                }

                // Call ToTitleCase function replace space by - hyphen through and convert to title case
                var url = ToTitleCase(businessCategoryName).replace(/\s+/g, "-");

                // Set final value of input with id's url, title and description
                $("#businessCategoryName").val(ToTitleCase(businessCategoryName));
                $("#url").val(url);
                $("#description").val(ToTitleCase(businessCategoryName));
                $("#keywords").val(ToTitleCase(businessCategoryName));
            });
            // End:

            // Prevent user manually typing text in url input
            $("#url").keypress(function (e) {
                e.preventDefault();
            });
            // End:
        });
    </script>
}

<h1>Edit</h1>

<h4>FifthCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FirstCategoryID" />
            <input type="hidden" asp-for="SecondCategoryID" />
            <input type="hidden" asp-for="ThirdCategoryID" />
            <input type="hidden" asp-for="FourthCategoryID" />
            <input type="hidden" asp-for="FifthCategoryID" />
            <input type="hidden" asp-for="Keyword" id="keywords" class="form-control" />
            <input type="hidden" asp-for="URL" id="url" class="form-control" />
            <input type="hidden" asp-for="Description" id="description" class="form-control" />
            <span asp-validation-for="FirstCategoryID" class="text-danger"></span>
            <span asp-validation-for="SecondCategoryID" class="text-danger"></span>
            <span asp-validation-for="ThirdCategoryID" class="text-danger"></span>
            <span asp-validation-for="FourthCategoryID" class="text-danger"></span>
            <span asp-validation-for="FifthCategoryID" class="text-danger"></span>
            <span asp-validation-for="Keyword" class="text-danger"></span>
            <span asp-validation-for="URL" class="text-danger"></span>
            <span asp-validation-for="Description" class="text-danger"></span>
            <div class="form-group">
                <label class="control-label">Category</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Business Category Name</label>
                <input asp-for="SearchKeywordName" id="businessCategoryName" class="form-control" />
                <span asp-validation-for="SearchKeywordName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SortOrder" class="control-label"></label>
                <input asp-for="SortOrder" class="form-control" />
                <span asp-validation-for="SortOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="@ViewData["RefererUrl"]" class="btn btn-danger btn-sm mr-3">Cancel</a>
                <input type="submit" value="Save" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>