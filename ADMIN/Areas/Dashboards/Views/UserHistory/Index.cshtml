@inject BAL.Dashboard.History.IDashboardUserHistory userHistory

@{
    ViewData["Title"] = "User History Dashboard";
    Layout = "~/Views/Shared/_DashboardWithoutBreadcrumb.cshtml";
}

<!-- Begin: Breadcrumb -->
@{
    ViewData["BT-Text1"] = "";
    ViewData["BT-Link1"] = "";
    ViewData["BT-Text2"] = "";
    ViewData["BT-Link2"] = "";
    ViewData["BT-Text3"] = "";
    ViewData["BT-Link3"] = "";
    ViewData["BT-Text4"] = "";
    ViewData["BT-Link4"] = "";
}
<!-- End: Breadcrumb -->

@{
    var countRegisteredUsers = await userHistory.CountRegisteredUsersAsync(ViewBag.SubtractDays);
    var countAnonymousUsers = await userHistory.CountAnonymousUsersAsync(ViewBag.SubtractDays);
}

<div class="breadcrumb-header justify-content-between">
    <div class="left-content">
        <div>
            <h2 class="main-content-title tx-24 mg-b-1 mg-b-lg-1">@ViewData["Title"]</h2>
            <p class="mg-b-0">Analytics</p>
        </div>
    </div>
    <div class="main-dashboard-header-right">
        <div>
            <label class="tx-13">Customer Ratings</label>
            <div class="main-star">
                <i class="typcn typcn-star active"></i> <i class="typcn typcn-star active"></i> <i class="typcn typcn-star active"></i> <i class="typcn typcn-star active"></i> <i class="typcn typcn-star"></i> <span>(14,873)</span>
            </div>
        </div>
        <div>
            <label class="tx-13">Online Sales</label>
            <h5>563,275</h5>
        </div>
        <div>
            <label class="tx-13">Offline Sales</label>
            <h5>783,675</h5>
        </div>
    </div>
</div>
<!-- /breadcrumb -->
<div class="row row-sm">
    <div class="col-xl-3 col-lg-6 col-md-6 col-xm-12">
        <div class="card overflow-hidden sales-card bg-primary-gradient">
            <div class="pl-3 pt-3 pr-3 pb-2 pt-0">
                <div class="">
                    <h6 class="mb-3 tx-12 text-white">Registered Users</h6>
                </div>
                <div class="pb-0 mt-0">
                    <div class="d-flex">
                        <div class="">
                            <h4 class="tx-20 font-weight-bold mb-1 text-white">@countRegisteredUsers</h4>
                            <p class="mb-0 tx-12 text-white op-7">Compared to last week</p>
                        </div>
                        <span class="float-right my-auto ml-auto">
                            <i class="fas fa-eye text-white"></i>
                            <a href="#0" class="text-white op-7">View All</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 col-xm-12">
        <div class="card overflow-hidden sales-card bg-danger-gradient">
            <div class="pl-3 pt-3 pr-3 pb-2 pt-0">
                <div class="">
                    <h6 class="mb-3 tx-12 text-white">Anonymous Users</h6>
                </div>
                <div class="pb-0 mt-0">
                    <div class="d-flex">
                        <div class="">
                            <h4 class="tx-20 font-weight-bold mb-1 text-white">@countAnonymousUsers</h4>
                            <p class="mb-0 tx-12 text-white op-7">Compared to last week</p>
                        </div>
                        <span class="float-right my-auto ml-auto">
                            <i class="fas fa-eye text-white"></i>
                            <a href="#0" class="text-white op-7">View All</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 col-xm-12">
        <div class="card overflow-hidden sales-card bg-success-gradient">
            <div class="pl-3 pt-3 pr-3 pb-2 pt-0">
                <div class="">
                    <h6 class="mb-3 tx-12 text-white">PAID LISTINGS</h6>
                </div>
                <div class="pb-0 mt-0">
                    <div class="d-flex">
                        <div class="">
                            <h4 class="tx-20 font-weight-bold mb-1 text-white">N/A</h4>
                            <p class="mb-0 tx-12 text-white op-7">Compared to last week</p>
                        </div>
                        <span class="float-right my-auto ml-auto">
                            <i class="fas fa-eye text-white"></i>
                            <a href="#0" class="text-white op-7">View All</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 col-xm-12">
        <div class="card overflow-hidden sales-card bg-warning-gradient">
            <div class="pl-3 pt-3 pr-3 pb-2 pt-0">
                <div class="">
                    <h6 class="mb-3 tx-12 text-white">ORPHAN LISTINGS</h6>
                </div>
                <div class="pb-0 mt-0">
                    <div class="d-flex">
                        <div class="">
                            <h4 class="tx-20 font-weight-bold mb-1 text-white">10</h4>
                            <p class="mb-0 tx-12 text-white op-7">Compared to last week</p>
                        </div>
                        <span class="float-right my-auto ml-auto">
                            <i class="fas fa-eye text-white"></i>
                            <a href="#0" class="text-white op-7">View All</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row row-sm">
    <div class="col-xl-12 col-lg-12 col-md-12 col-xm-12">
        <div class="card card-dashboard-eight pb-2">
            @await Component.InvokeAsync("DashboardHistoryGetRegisteredUsers", ViewBag.SubtractDays)
        </div>
    </div>
    <div class="col-xl-12 col-lg-12 col-md-12 col-xm-12">
        <div class="card card-dashboard-eight pb-2">
            @await Component.InvokeAsync("DashboardHistoryGetAnonymousUserAsync", ViewBag.SubtractDays)
        </div>
    </div>
    <div class="col-xl-12 col-lg-12 col-md-12 col-xm-12">
        <div class="card card-dashboard-eight pb-2">
            @await Component.InvokeAsync("DashboardHistoryUsersUpdatedListing", ViewBag.SubtractDays)
        </div>
    </div>
    <div class="col-xl-12 col-lg-12 col-md-12 col-xm-12">
        <div class="card card-dashboard-eight pb-2">
            @await Component.InvokeAsync("DashboardHistoryUsersLikedListings", ViewBag.SubtractDays)
        </div>
    </div>
    <div class="col-xl-12 col-lg-12 col-md-12 col-xm-12">
        <div class="card card-dashboard-eight pb-2">
            @await Component.InvokeAsync("DashboardHistoryUsersSubscribedListings", ViewBag.SubtractDays)
        </div>
    </div>
    <div class="col-xl-12 col-lg-12 col-md-12 col-xm-12">
        <div class="card card-dashboard-eight pb-2">
            @await Component.InvokeAsync("DashboardHistoryUsersBookmarkedListing", ViewBag.SubtractDays)
        </div>
    </div>
</div>