@model IEnumerable<BOL.AUDITTRAIL.UserHistory>

<h6 class="card-title">Registered Users</h6>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => "").RenderedAs(model => model.HistoryID).Titled("History ID");
        columns.Add(model => model.Email).Titled("Email");
        columns.Add(model => model.Mobile).Titled("Mobile");
        columns.Add(model => model.Activity).Titled("Activity");
        columns.Add(model => model.IPAddress).Titled("IP Address");
        columns.Add(model => model.VisitDate/*.ToString("dd MM, yyyy")*/).Titled("Date");
        columns.Add(model => model.VisitTime/*.ToString("hh:mm t")*/).Titled("Time");
        //columns.Add(model => $"<a href=\"/AllCategories/SecondCategories/Edit/{model.FirstCategoryID}\" style='margin-left:5px;'><i class='fas fa-pen text-secondary'></i></a><a href=\"/AllCategories/SecondCategories/{model.FirstCategoryID}\" style='margin-left:10px;'><i class='fas fa-eye text-secondary'></i></a>").Encoded(false).Titled("Actions");
    })
    .Filterable()
    .Sortable()
    .Pageable(pager =>
    {
        pager.PageSizes = new Dictionary<Int32, String> { { 10, "10" }, { 0, "All" } };
        pager.ShowPageSizes = true;
        pager.PagesToDisplay = 3;
        pager.CurrentPage = 1;
        pager.RowsPerPage = 10;
    })
    .Using(GridFilterMode.Row)
    .Empty("No data found")
)